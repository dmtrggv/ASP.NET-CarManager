@model CarManager.Models.EngineModel

@{
    ViewData["Title"] = "Delete Engine";
}

<!-- Title & Desc -->
<h2>@ViewData["Title"]</h2>
<h3>Are you sure you want to delete this engine?</h3>

<!-- Engine details -->
<div class="mb-3">
    <h4>@Model.Code (@Model.TypeEngine)</h4>
    <p><strong>Manufacturer:</strong> @Model.Manufacturer</p>
    <p><strong>Production Start:</strong> @Model.DateStarted.ToShortDateString()</p>
    <p><strong>Production End:</strong> @Model.DateEnded.ToShortDateString()</p>
    <p><strong>Number of Cars Using This Engine:</strong> @Model.Cars?.Count ?? 0</p>
</div>

<!-- Actions -->
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
