@model CarManager.Models.EngineModel

@{
    ViewData["Title"] = "Edit Engine";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">

    <!-- Hidden ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Engine code -->
    <div class="mb-3">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <!-- Engine type -->
    <div class="mb-3">
        <label asp-for="TypeEngine" class="form-label"></label>
        <select asp-for="TypeEngine" class="form-select" asp-items="Html.GetEnumSelectList<CarManager.Models.EngineType>()">
            <option value="">No Type</option>
        </select>
        <span asp-validation-for="TypeEngine" class="text-danger"></span>
    </div>

    <!-- Manufacturer -->
    <div class="mb-3">
        <label asp-for="Manufacturer" class="form-label"></label>
        <input asp-for="Manufacturer" class="form-control" />
    </div>

    <!-- Date started -->
    <div class="mb-3">
        <label asp-for="DateStarted" class="form-label"></label>
        <input asp-for="DateStarted" type="date" class="form-control" />
        <span asp-validation-for="DateStarted" class="text-danger"></span>
    </div>

    <!-- Date ended -->
    <div class="mb-3">
        <label asp-for="DateEnded" class="form-label"></label>
        <input asp-for="DateEnded" type="date" class="form-control" />
        <span asp-validation-for="DateEnded" class="text-danger"></span>
    </div>

    <!-- Actions -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}