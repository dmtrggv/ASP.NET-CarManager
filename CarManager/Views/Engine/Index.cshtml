@model IEnumerable<CarManager.Models.EngineModel>
@using CarManager.Models

@{
    ViewData["Title"] = "Engines";
    string selectedCode = ViewBag.SelectedCode as string;
    EngineType? selectedType = ViewBag.SelectedType as EngineType?;
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="d-flex align-items-center mb-3 gap-3">

    <a asp-action="Create" class="btn btn-primary">Create New Engine</a> •

    <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">

        <!-- Filter by Code -->
        <input type="text"
               name="code"
               class="form-control"
               placeholder="Engine code..."
               value="@selectedCode" />

        <!-- Filter by EngineType -->
        <select name="type" class="form-select">
            <option value="">All Types</option>
            @foreach (EngineType type in Enum.GetValues(typeof(EngineType)))
            {
                <option value="@type" selected="@(selectedType == type)">@type</option>
            }
        </select>

        <button type="submit" class="btn btn-success">Search</button>
    </form>

</div>

<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning">No engines found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Type</th>
                <th>Manufacturer</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Cars Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var engine in Model)
            {
                <tr>
                    <td>@engine.Code</td>
                    <td>@engine.TypeEngine</td>
                    <td>@engine.Manufacturer</td>
                    <td>@engine.DateStarted.ToShortDateString()</td>
                    <td>@engine.DateEnded.ToShortDateString()</td>
                    <td>@engine.Cars.Count()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@engine.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@engine.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@engine.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}