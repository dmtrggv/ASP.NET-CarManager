@model CarManager.Models.GarageModel

@{
    ViewData["Title"] = "Create Garage";
}

<!-- Title -->
<h2>@ViewData["Title"]</h2>

<!-- Garage details -->
<form asp-action="Create" method="post">

    <!-- Name -->
    <div class="form-group mb-2">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Address -->
    <div class="form-group mb-2">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Car capacity -->
    <div class="form-group mb-2">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <!-- Has security -->
    <div class="form-group mb-2 form-check">
        <input asp-for="HasSecurity" class="form-check-input" />
        <label asp-for="HasSecurity" class="form-check-label"></label>
    </div>

    <!-- 24/7 opened -->
    <div class="form-group mb-2 form-check">
        <input asp-for="IsOpen24Hours" class="form-check-input" />
        <label asp-for="IsOpen24Hours" class="form-check-label"></label>
    </div>

    <!-- Rent fee -->
    <div class="form-group mb-2">
        <label asp-for="RentFee" class="form-label"></label>
        <input asp-for="RentFee" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="RentFee" class="text-danger"></span>
    </div>

    <!-- Actions -->
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}