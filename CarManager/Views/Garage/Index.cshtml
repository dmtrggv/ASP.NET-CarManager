@model IEnumerable<CarManager.Models.GarageModel>

@{
    ViewData["Title"] = "Garages";
    string selectedName = ViewBag.SelectedName as string;
    string selectedAddress = ViewBag.SelectedAddress as string;
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="d-flex align-items-center mb-3 gap-3">

    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Create New Garage</a>
        <span> | </span>
    }

    <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">

        <!-- Filter by Name -->
        <input type="text"
               name="name"
               class="form-control"
               placeholder="Garage name..."
               value="@selectedName" />

        <!-- Filter by Address -->
        <input type="text"
               name="address"
               class="form-control"
               placeholder="Address..."
               value="@selectedAddress" />

        <button type="submit" class="btn btn-success">Search</button>
    </form>

</div>

<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning">No garages found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                <th>@Html.DisplayNameFor(model => model.First().Capacity)</th>
                <th>Security</th>
                <th>Open 24 Hours</th>
                <th>@Html.DisplayNameFor(model => model.First().RentFee)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var garage in Model)
            {
                <tr>
                    <td>@garage.Name</td>
                    <td>@garage.Address</td>
                    <td>@garage.Capacity</td>
                    <td>@(garage.HasSecurity ? "Yes" : "No")</td>
                    <td>@(garage.IsOpen24Hours ? "Yes" : "No")</td>
                    <td>@garage.RentFee.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@garage.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="GarageCars" asp-route-id="@garage.Id" class="btn btn-sm btn-info">View Cars</a>

                        @if (User.IsInRole("admin"))
                        {
                            <span> | </span>
                            <a asp-action="Edit" asp-route-id="@garage.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@garage.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
