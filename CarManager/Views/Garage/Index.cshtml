@model IEnumerable<CarManager.Models.GarageModel>

@{
    ViewData["Title"] = "Garages";
}

<!-- Title -->
<h2>@ViewData["Title"]</h2>

<!-- Create garage -->
<p><a asp-action="Create" class="btn btn-primary">Create New Garage</a></p>

<!-- Garage table -->
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                <th>@Html.DisplayNameFor(model => model.First().Capacity)</th>
                <th>Security</th>
                <th>Open 24 Hours</th>
                <th>@Html.DisplayNameFor(model => model.First().RentFee)</th>
                <th>Number of Cars</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var garage in Model)
            {
                <tr>
                    <td>@garage.Name</td>
                    <td>@garage.Address</td>
                    <td>@garage.Capacity</td>
                    <td>@(garage.HasSecurity ? "Yes" : "No")</td>
                    <td>@(garage.IsOpen24Hours ? "Yes" : "No")</td>
                    <td>@garage.RentFee.ToString("C")</td>
                    <td>@garage.Cars?.Count ?? 0</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@garage.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@garage.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@garage.Id" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-action="GarageCars" asp-route-id="@garage.Id" class="btn btn-info btn-sm">View Cars</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No garages found. <b>Create one</b></div>
}