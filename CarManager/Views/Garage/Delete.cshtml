@model CarManager.Models.GarageModel

@{
    ViewData["Title"] = "Delete Garage";
}

<!-- Title & Desc -->
<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete garage <b><i>@Model.Name</i></b>?</h3>
<hr />

<!-- Garage details-->
<div>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
    <p><strong>Has Security:</strong> @(Model.HasSecurity ? "Yes" : "No")</p>
    <p><strong>Open 24 Hours:</strong> @(Model.IsOpen24Hours ? "Yes" : "No")</p>
    <p><strong>Monthly Fee:</strong> @Model.RentFee.ToString("C")</p>
</div>

<!-- Actions -->
<hr />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
