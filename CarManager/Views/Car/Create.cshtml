@model CarManager.Models.CarModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Car";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">

    <div class="form-group mb-2">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" type="number" class="form-control" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="EngineId" class="form-label">Engine</label>
        <select asp-for="EngineId" class="form-select" asp-items="ViewBag.Engines">
            <option value="">-- Select Engine --</option>
        </select>
        <span asp-validation-for="EngineId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="CountOfPassenger" class="form-label"></label>
        <input asp-for="CountOfPassenger" type="number" class="form-control" />
        <span asp-validation-for="CountOfPassenger" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Color" class="form-label"></label>
        <select asp-for="Color" class="form-select" asp-items="Html.GetEnumSelectList<CarManager.Models.CarColor>()">
            <option value="">-- Select Color --</option>
        </select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ProductionDate" class="form-label"></label>
        <input asp-for="ProductionDate" type="date" class="form-control" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2 form-check">
        <input asp-for="IncludedTax" class="form-check-input" />
        <label asp-for="IncludedTax" class="form-check-label"></label>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="GarageId" class="form-label">Garage</label>
        <select asp-for="GarageId" class="form-select" asp-items="ViewBag.Garages">
            <option value="">-- Select Garage --</option>
        </select>
        <span asp-validation-for="GarageId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
